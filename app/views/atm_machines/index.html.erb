<p id="notice"><%= notice %></p>
<div class="container">
  <center><img src=http://www.affordablecebu.com/pictures/articles/banking/Deposit_money_in_Unionbank_ATM.gif width="350" height="350"></center>
<center><h1>Listing Atm Machines</h1></center>

<center><%= form_tag atm_machines_path, :method => :get do %></center>
  <p>
    <center><%= text_field_tag :search, params[:search] %></center><br>
    <center><%= submit_tag "Search Near", :name => nil %></center>
  </p>
<% end %>

<table class= "table table-striped">
  <thead>
    <tr>
     <th>ATM Machine Number</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @atm_machines.each do |atm_machine| %>
      <tr>
       <td><%= atm_machine.id%></td>
        <td><%= atm_machine.address%></td>
        <td><%= link_to 'Show', atm_machine , class:"btn btn-danger" %></td> 
 
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Atm machine', new_atm_machine_path, class:"btn btn-primary btn-lg btn-block" %>

</div>
