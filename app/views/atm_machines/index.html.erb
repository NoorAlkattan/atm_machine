<p id="notice"><%= notice %></p>
<div class="container">
<h1>Listing Atm Machines</h1>

<%= form_tag atm_machines_path, :method => :get do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search Near", :name => nil %>
  </p>
<% end %>

<table class= "table table-striped">
  <thead>
    <tr>
      <th>Address</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @atm_machines.each do |atm_machine| %>
      <tr>
        <td><%= atm_machine.address %></td>
        <td><%= atm_machine.latitude %></td>
        <td><%= atm_machine.longitude %></td>
        <td><%= link_to 'Show', atm_machine , class:"btn btn-danger" %></td> 
 
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Atm machine', new_atm_machine_path, class:"btn btn-primary btn-lg btn-block" %>

</div>
